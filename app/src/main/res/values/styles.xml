<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Обязаятельные настройки -->
        <item name="colorPrimary">@color/colorGreen</item>
        <item name="colorPrimaryDark">@color/colorGreen</item>
        <item name="colorAccent">@color/colorGreen</item>
        <!-- Свои настройки -->
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>
    <!-- Текстовые заголовки -->
    <style name="txtTitleStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@color/colorWhite</item>
    </style>
    <!-- Название товаров и категорий -->
    <style name="txtNameProductAndCategoryStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:ellipsize">end</item>
    </style>
    <!-- Кнопки "Информация" -->
    <style name="btnInfo">
        <item name="android:textSize">14sp</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:drawableRight">@drawable/ic_right</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>