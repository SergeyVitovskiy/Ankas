<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!-- Перый элемент -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="start"
                android:maxLines="2"
                android:text="Мини АЗС Piusi ST Panther 56 K33"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/img_item"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitCenter"
                android:padding="5dp" />
            <!-- Стоимость -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right">

                <TextView
                    android:id="@+id/txt_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="38 500 ₽"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_by"
                    android:layout_width="100dp"
                    android:layout_height="26dp"
                    android:background="@color/colorGreen"
                    android:text="Купить"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>
            <!-- Бренд и наличие -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Piusi, Италия" />

                <TextView
                    android:id="@+id/txt_nal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:text="В наличии"
                    android:textColor="@color/colorGreen" />
            </RelativeLayout>
        </LinearLayout>
        <!-- Второй элемент -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:padding="5dp">
            <!-- Нвазние товара -->
            <TextView
                android:id="@+id/txt1_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="start"
                android:text="Мини АЗС Piusi ST Panther 56 K33"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />
            <!-- Изображение товара -->
            <ImageView
                android:id="@+id/img1_item"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitCenter"
                android:padding="5dp" />
            <!-- Стоимость -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right">

                <TextView
                    android:id="@+id/txt1_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="38 500 ₽"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp" />
                <!-- Приобрести товар -->
                <Button
                    android:id="@+id/btn1_by"
                    android:layout_width="100dp"
                    android:layout_height="26dp"
                    android:background="@color/colorGreen"
                    android:text="Купить"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>
            <!-- Бренд и наличие -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt1_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Piusi, Италия" />

                <TextView
                    android:id="@+id/txt1_nal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:text="В наличии"
                    android:textColor="@color/colorGreen" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>