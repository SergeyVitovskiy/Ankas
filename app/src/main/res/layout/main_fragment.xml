<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    android:orientation="vertical">
    <!-- Обратный звонок -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:layout_marginBottom="2dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_tell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="+7(351) 751-40-35"
            android:textColor="@color/colorGreen"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txt_callBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Обратный звонок"
            android:textColor="@color/colorGreen"
            android:textSize="18sp" />
    </LinearLayout>
    <!-- Баннер -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/banner" />
    <!-- Отображение категорий -->
    <!-- Название -->
    <TextView
        style="@style/txtTitleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="Категории товаров" />
    <!-- Категории товаров -->
    <com.example.ankas.Components.ExpandableHeightGridView
        android:id="@+id/grid_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="2dp"
        android:numColumns="3"
        android:verticalSpacing="2dp" />
    <!-- Популярные товары -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Популярный товары"
        android:layout_marginBottom="2dp"
        style="@style/txtTitleStyle"/>
    <!-- Нижнее меню -->
    <include layout="@layout/bottom_info" />
</LinearLayout>